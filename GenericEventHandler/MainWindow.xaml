<Window x:Class="GenericEventHandler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenericEventHandler"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel ButtonBase.Click="StackPanel_Click">
        <Button Foreground="Red" Content="Red"/>
        <Button Foreground="Green" Content="Green"/>
        <Button Foreground="Blue" Content="Blue"/>
        <TextBlock x:Name="output" HorizontalAlignment="Center" Text="What color will you choose?"/>
    </StackPanel>
</Window>
